<?xml version="1.0"?>
<launch>

  <!-- When running a rosbag, use -clock unless gazebo is up -->

  <!-- True if running gazebo or if using rosbags. If both, then don't use clock when running rosbag -->
  <arg name="sim" default="false" /> 

  <!-- True if running camera and not a rosbag -->
  <arg name="live_camera" default="true" />

  <!-- Always false if running manos -->
  <arg name="manos_tf" value="false" />

  <param name="use_sim_time" value="$(arg sim)" />

  <include file="$(find openpose_utils_launch)/launch/whole_pipeline_xtion_with_marker.launch">
    <arg name="sim" value="$(arg sim)"/>
    <arg name="live_camera" value="$(arg live_camera)"/>
    <arg name="manos_tf" value="$(arg manos_tf)"/>
  </include>

</launch>